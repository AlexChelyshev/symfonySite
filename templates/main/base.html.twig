<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/framework/font-awesome-4.7.0/css/font-awesome.min.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/framework/bootstrap-4.5.0/css/bootstrap.min.css')}}">
            <link rel="stylesheet" href="{{ asset('assets/main/css/style.css')}}">
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">
            <i class="fa fa-space-shuttle" aria-hidden="true"></i>
        </a>
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('home') }}">Главная</a>
                </li>
            </ul>
            <form class="form-inline">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="{{ path('admin home') }}" class="btn btn-outline-success my-2 my-sm-0" type="submit">Админка</a>
                {% else  %}
                <a href="{{ path('app_login') }}" class="btn btn-outline-success my-2 my-sm-0" type="submit">Вход</a>
                {% endif %}
            </form>
            <span class="navbar-text">
    </span>
        </div>
    </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
                    integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
                    crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
